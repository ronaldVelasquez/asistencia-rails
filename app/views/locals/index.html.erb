<h1>Listing locals</h1>

<table>
  <thead>
    <tr>
      <th>Cod sede operativa</th>
      <th>Cod local sede</th>
      <th>Nombrelocal</th>
      <th>Direccion</th>
      <th>Refencia</th>
      <th>Naula</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locals.each do |local| %>
      <tr>
        <td><%= local.cod_sede_operativa %></td>
        <td><%= local.cod_local_sede %></td>
        <td><%= local.nombreLocal %></td>
        <td><%= local.direccion %></td>
        <td><%= local.refencia %></td>
        <td><%= local.naula %></td>
        <td><%= local.estado %></td>
        <td><%= link_to 'Show', local %></td>
        <td><%= link_to 'Edit', edit_local_path(local) %></td>
        <td><%= link_to 'Destroy', local, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

